<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgbody"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:id = "@+id/bsynoni"
            android:gravity="center"
            android:src="@drawable/bannerstrip" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/description_textview"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text = "@string/bpo_bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/description_textview1"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text = "@string/bpo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/fruit_image2"
            android:src = "@drawable/fruit1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/description_textview2"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text = "@string/bpo_bulltes"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
</LinearLayout>
</ScrollView>