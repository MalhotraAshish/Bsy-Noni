<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/bgbody"
        tools:context="com.bsy_noni.ashish.bsynoni.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:id = "@+id/bsynoni"
            android:gravity="center"
            android:src="@drawable/bannerstrip" />

        <HorizontalScrollView
            android:id="@+id/hsv1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bsynoni"
            android:layout_marginBottom="0dp">
            <LinearLayout
                android:id="@+id/innerLay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/hair_detail"
                            android:text = "BSY NONI Black Hair Magic fruit shampoo is developed from the essence of magical fruitfull NONI fruit. ......"
                            android:layout_marginLeft="0dp"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="italic"
                            android:textColor="#00FFFF" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/more"
                            android:text = "more."
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/hsv3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#228B22"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="horizontal"
            android:layout_below="@+id/hsv1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="00dp">
        <LinearLayout
            android:id="@+id/innerLay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/text_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/coursetype3"
                    android:text = "About US"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/coursetype2"
                    android:text = "Distrubutors Talk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/coursetype1"
                    android:text = "Business Opportunity"
                    android:layout_marginLeft="0dp"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/product_info"
            android:layout_below="@+id/hsv3"
            android:layout_marginTop="45dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="sans"
            android:text = "•	Products"
            android:textSize="27dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/product1_text"
            android:layout_below="@+id/product_info"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:typeface="sans"
            android:text = "•	Black Hair Magic"
            android:layout_marginLeft="25dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/product2_text"
            android:layout_below="@+id/product1_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:typeface="sans"
            android:text = "•	Fruit Enzyme"
            android:textSize="17dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/contact_us"
            android:layout_below="@+id/product2_text"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="sans"
            android:text = "•	Contact Us"
            android:textSize="27dp"/>


        <HorizontalScrollView
            android:id="@+id/hsv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/contact_us"
            android:layout_marginBottom="0dp">
            <LinearLayout
                android:id="@+id/innerLay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/text_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/fruit_detial"
                            android:text = "NONI ENZYME is a health supplement to restore the health and beauty of body and mind.  ......"
                            android:layout_marginLeft="0dp"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="italic"
                            android:textColor="#00FFFF" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/text_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/more1"
                            android:text = "more."
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:id = "@+id/bsynoni_fruit"
            android:gravity="center"
            android:src="@drawable/fruitbanner"
            android:layout_below="@+id/hsv2"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</ScrollView>